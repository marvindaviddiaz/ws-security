		</sws:soapAction>
		

		
		<!-- ############### GLOBAL  ###############  -->
		<ref bean="validatingInterceptor"/>
		
	</sws:interceptors>
	
	<!-- VALIDATION INTERCEPTOR -->
	<!-- Interceptor que valida que todos los mensajes traigan SoapAction -->
	<!-- xq sws:payloadRoot no encuentra el EndPoint cuando el body viene cifrado -->
	<bean id="soapActionRequiredEndpointInterceptor" class="com.bytesw.hubpagos.ws.soap.server.endpoint.interceptor.SoapActionRequiredEndpointInterceptor">
		<property name="validSoapActions">
			<list>
				<value>http://pasarela.hubpagos.bytesw.com/GetSession</value>
				<value>http://pasarela.hubpagos.bytesw.com/GetBillers</value>
				<value>http://pasarela.hubpagos.bytesw.com/GetBalance</value>
				<value>http://pasarela.hubpagos.bytesw.com/PayBill</value>
				<value>http://backend.hubpagos.bytesw.com/GetSession</value>
				<value>http://backend.hubpagos.bytesw.com/ValidateSession</value>
				<value>http://backend.hubpagos.bytesw.com/UserAccounts</value>
				<value>http://backend.hubpagos.bytesw.com/SecondAuthentication</value>
				<value>http://backend.hubpagos.bytesw.com/ChargeAccount</value>
				<value>http://backend.hubpagos.bytesw.com/ReverseCharge</value>
			</list>
		</property>
	</bean>
	
	<!-- VALIDATION INTERCEPTOR -->

	<bean id="validatingInterceptor" class="org.springframework.ws.soap.server.endpoint.interceptor.PayloadValidatingInterceptor">
		<property name="schemas">
			<list>
				<value>classpath:wsdl/pasarela.xsd</value>
				<value>classpath:wsdl/backend.xsd</value>
			</list>
		</property>
		<property name="validateRequest" value="true" />
		<!-- <property name="validateResponse" value="true"/> -->
	</bean>

	<!-- SECURITY INTERCEPTOR -->

	<bean id="jaxbElementPayloadMethodProcessor" class="org.springframework.ws.server.endpoint.adapter.method.jaxb.JaxbElementPayloadMethodProcessor" />
	<bean id="messageFactory" class="org.springframework.ws.soap.saaj.SaajSoapMessageFactory">
		<property name="soapVersion">
			<util:constant static-field="org.springframework.ws.soap.SoapVersion.SOAP_11" />
		</property>
	</bean>
	<bean id="userDetailsService" class="com.bytesw.hubpagos.pasarela.bs.service.UserDetailsServiceImpl">
    </bean>
    
    
    <import resource="spring-wss4j.xml"/>

