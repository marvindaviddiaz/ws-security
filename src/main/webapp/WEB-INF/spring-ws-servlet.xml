<!-- 		</sws:payloadRoot> -->
		
		<sws:soapAction value="http://pasarela.hubpagos.bytesw.com/GetSession">
			<ref bean="loginInterceptor"/>
		</sws:soapAction>
		<sws:soapAction value="http://pasarela.hubpagos.bytesw.com/GetBillers">
			<ref bean="securityInterceptor"/>
		</sws:soapAction>
		<sws:soapAction value="http://pasarela.hubpagos.bytesw.com/GetBalance">
			<ref bean="securityInterceptor"/>
		</sws:soapAction>
		<sws:soapAction value="http://pasarela.hubpagos.bytesw.com/PayBill">
