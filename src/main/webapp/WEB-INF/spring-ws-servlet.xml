		<sws:soapAction value="http://backend.hubpagos.bytesw.com/GetSession">
			<ref bean="loginInterceptor"/>
		</sws:soapAction>
		<sws:soapAction value="http://backend.hubpagos.bytesw.com/ValidateSession">
			<ref bean="securityInterceptor"/>
		</sws:soapAction>
		<sws:soapAction value="http://backend.hubpagos.bytesw.com/UserAccounts">
